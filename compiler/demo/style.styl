html, body, div, textarea
    border 0
    margin 0
    padding 0

html, body
  height 100%
  width 100%

.container
    position relative

.fill-container
    position absolute
    width 100%
    top 0
    bottom 0

.size-to-parent
    width 100%
    height 100%

.scroll-box
    overflow scroll
    display block
    height 100%

.left-column
    width 50%
    height 100%
    position absolute

.right-column
    width 50%
    height 100%
    position absolute
    right 0

top-row-height = 30px

.top-row
    height top-row-height

#output
    top top-row-height

#error
    color red

.errors
    color red
    font-weight bold